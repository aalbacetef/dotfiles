#!/usr/bin/env bash

source  "$(dirname $BASH_SOURCE)/paths.sh"

## DDO launcher. Added this because steam was struggling to launch DDO.
ddo-launch() {
  local pfx=$(realpath ~/.steam/debian-installation/steamapps/compatdata/206480/pfx)
  local rootdir="$(realpath ~/.steam/debian-installation/steamapps/common/Dungeons\ and\ Dragons\ Online)"

  echo "prefix: $pfx"
  echo "rootdir: $rootdir"
  echo ""
  env WINEPREFIX=$pfx wine "$rootdir/DNDLauncher.exe"
}


[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

source "/personal-files/apps/cargo/env"
source $DOTFILES/bash/rustrc
source $DOTFILES/bash/tunnel.sh
source $DOTFILES/bash/hidden.sh # TODO: need a better way to inject/import this.

complete -C /personal-files/bin/mc mc

# custom bash prompt
source $DOTFILES/bash/command-prompt.sh

# add support for kitty helpers
source $DOTFILES/kitty/select.sh

# add additional commands
source $DOTFILES/bash/extension.sh


# alias docker to use non-podman host
alias docker='env DOCKER_HOST=$SHADOWED_DOCKER_HOST docker'
alias sp='superproductivity --user-data-dir='$SUPERPROD_USER_DATA

export KITTY_CONFIG_DIRECTORY=$DOTFILES/kitty


reload-bash() {
  source ~/.bashrc
}

macchina
